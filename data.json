---
---
[
  {% for page in site.pages %}
  {% if page.title %}
  {
    {% capture mytitle%}{{page.title}}{%endcapture%}
    "title"    : "{{ mytitle | escape }}",
    "category" : [
      "webpage"{% if post.categories %},{% endif %}
      {% for cat in post.categories %}
        "{{cat}}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "content"	 : "{{page.content | markdownify | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
    "url"      : "https://timms.io{{ site.baseurl }}{{ page.url }}",
    "date"     : "{{ page.date }}"
  },
  {% endif %}
{% endfor %}

{% assign tools = site.data.utils.utilities %}
{% for tool in tools %}
  {
    {% capture mytitle%}{{tool.title | camelcase}}{%endcapture%}
    "title"    : "{{ mytitle | escape }}",
    "category" : [
          "external tool",
      {% for tag in tool.tags %}
        "{{tag}}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "content"	 : "{{ tool.description | markdownify | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
    "url"      : "https://timms.io/utils/tools#{{ mytitle | remove: " " | escape | remove: "." }}",
    "date"     : "{{ tool.added }}"
  },
{% endfor %}

{% for post in site.posts %}
{% if post.title %}
  {
    {% capture mytitle%}{{post.title}}{%endcapture%}
    "title"    : "{{ mytitle | escape }}",
    "category" : [
  {% for cat in post.categories %}
    "{{cat}}"{% unless forloop.last %},{% endunless %}
  {% endfor %}
],
    "content"	 : "{{ post.content | markdownify | strip_html | strip_newlines | remove:  "	" | escape | remove: "\"}}",
    "url"      : "https://timms.io{{ site.baseurl }}{{ post.url }}",
    "date"     : "{{ post.date }}"
  }{% unless forloop.last %},{% endunless %}
{% endif %}
{% endfor %}
]
